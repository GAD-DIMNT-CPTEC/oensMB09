#!/bin/ksh -x
#
#********************************************************#
#                                                        #
#     Name:     recfct.scr                               #
#                                                        #
#     Function: This script file is used to performs     #
#               the recomposition of a global model      #
#               initial conditions.                      #
#                                                        #
#     Date:        February 11th, 1998.                  #
#     Last change: February 11th, 1998.                  #
#                                                        #
#********************************************************#
#
echo 'Recomposition  -x-  RUNNING ...'
#
#    Set directories:
#
source=${HOME_suite}/recfct/source
bin=${SC1_suite}/recfct/bin/$TRUNC$LEV;mkdir -p ${bin}
input=${SC1_suite}/recfct/datain;mkdir -p ${input}
out=${SC1_suite}/recfct/output;mkdir -p ${out}
#
#   Check if the makefile will compile:
#
echo $COMPILE
  if [ "$COMPILE" = "make" ]
  then
#
#  Compile the sources:
#
cd $source
make -f recfct.mk
exit
  fi
#
echo $COMPILE
  if [ "$COMPILE" = "clean" ]
  then
#
#  Compile the sources:
#
cd $source
make -f recfct.mk clean
make -f recfct.mk
exit
  fi
#
cd $bin
cp -v ./recfct.$TRUNC$LEV ./recfct.$TRUNC$LEV.${TYPES}${LABELI}
#
echo "./recfct.$TRUNC$LEV < $input/recfct${TYPES}${LABELI}.nml > $out/recfct.out.$LABELI.$HOUR.$TRUNC$LEV"
./recfct.$TRUNC$LEV.${TYPES}${LABELI} < $input/recfct${TYPES}${LABELI}.nml > $out/recfct.out.$LABELI.$HOUR.$TRUNC$LEV
#
