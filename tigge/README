setup

 setenv GRIB_DEFINITION_PATH /gfs/dk13/jpablo/tigge/share/grib_api/definitions
 setenv GRIB_TEMPLATES_PATH /gfs/dk13/jpablo/tigge/share/grib_api/templates

convert

 grib_convert cptec.rules_grib2 <grib1 filename> <grib2 filename>
 grib_convert cptec.rules_grib1 <grib2 filename> <grib1 filename>

dump

 grib_dump <grib2 filename> or <grib1 filename>

Postgrib
 
 Postgrib (exec)


