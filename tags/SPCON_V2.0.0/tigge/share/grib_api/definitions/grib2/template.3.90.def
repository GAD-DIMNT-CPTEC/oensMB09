#meta      longOfFirstPoint   #scale(yCoordinateOfSubSatellitePoint,angleMultiplier,angleDivisor);
#meta      latOfLastPoint     #scale(xCoordinateOfOriginOfSectorImage,angleMultiplier,angleDivisor);
#meta      longOfLastPoint    #scale(yCoordinateOfOriginOfSectorImage,angleMultiplier,angleDivisor);

#alias geography.laFirst = latOfFirstPoint;
#alias geography.loFirst = longOfFirstPoint;
#alias geography.laLast = latOfLastPoint;
#alias geography.loLast = longOfLastPoint;

alias geography.Ni = numberOfPointsAlongXAxis;
alias geography.Nj = numberOfPointsAlongYAxis;
